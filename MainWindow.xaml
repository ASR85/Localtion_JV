<Window x:Class="Localtion_JV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Localtion_JV"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="DarkBlue">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <Button Content="Accueil" MinWidth="100" Margin="4" Click="BtnAccueil" Background="White" Foreground="Blue"/>
            <Button Content="Inscription" MinWidth="100" Margin="4" Click="BtnInscription" Background="White" Foreground="Blue"/>
            <Button Content="Connexion" MinWidth="100" Margin="4" Click="BtnConnection" Background="White" Foreground="Blue"/>
            <Button Content="Informations" MinWidth="100" Margin="4" Click="BtnDetails" Background="White" Foreground="Blue"/>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" x:Name="Main" Margin="0,35,0,0"/>
    </Grid>
</Window>
